
{
  "name": "yama-puzzle",
  "productName": "Yama Puzzle",
  "version": "0.1.0",
  "description": "Yama Puzzle â€“ Demo converted to Electron",
  "main": "main.js",
  "author": "Joe",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.yourname.yamapuzzle",
    "productName": "Yama Puzzle",
    "directories": {
